<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LoginController">
   <children>
      <!-- Background Panel -->
      <Label layoutX="8.0" layoutY="15.0" prefHeight="286.0" prefWidth="321.0" style="-fx-background-color: #f5f5f5; -fx-border-color: #b0b0b0; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;" />

      <!-- Login Header -->
      <Label fx:id="loginField" layoutX="140.0" layoutY="34.0" text="Login">
         <font>
            <Font size="24.0" />
         </font>
      </Label>

      <!-- Username Field and Label -->
      <Label fx:id="usernameField" layoutX="50.0" layoutY="95.0" text="Username" />
      <TextField fx:id="loginScreenUsername" layoutX="135.0" layoutY="90.0" prefWidth="150.0" />

      <!-- Password Field and Label -->
      <Label fx:id="passwordField" layoutX="50.0" layoutY="135.0" text="Password" />
      <TextField fx:id="loginScreenPassword" layoutX="135.0" layoutY="130.0" prefWidth="150.0" />

      <!-- Login and Exit Buttons -->
      <Button fx:id="loginButton" layoutX="50.0" layoutY="180.0" mnemonicParsing="false" onAction="#loginButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 5px 20px;" text="Login" />
      <Button fx:id="cancelButtonField" layoutX="220.0" layoutY="180.0" mnemonicParsing="false" onAction="#cancelButton" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 5px 20px;" text="Exit" />

      <!-- Location Label and Field -->
      <Label fx:id="locationText" layoutX="50.0" layoutY="230.0" text="Location" />
      <TextField fx:id="loginScreenLocationField" editable="false" layoutX="135.0" layoutY="225.0" prefHeight="26.0" prefWidth="150.0" style="-fx-background-color: #e0e0e0;" />
   </children>
</AnchorPane>
